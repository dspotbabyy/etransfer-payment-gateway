# =============================================================================
# E-TRANSFER PAYMENT GATEWAY - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control - it contains sensitive information

# =============================================================================
# BASIC APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000
RENDER=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For Production (PostgreSQL on Render.com)
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# For Development (SQLite - no additional config needed)
# SQLite database will be created automatically as orders.db

# =============================================================================
# EMAIL CONFIGURATION (IMAP - For Receiving Interac Notifications)
# =============================================================================
# IMAP settings for receiving Interac e-Transfer notifications
IMAP_HOST=imap.fastmail.com
IMAP_PORT=993
IMAP_SECURE=true
IMAP_USER=your-fastmail-email@fastmail.com
IMAP_PASS=your-fastmail-app-password

# =============================================================================
# EMAIL CONFIGURATION (SMTP - For Sending Payment Instructions)
# =============================================================================
# SMTP settings for sending payment instruction emails
SMTP_HOST=smtp.fastmail.com
SMTP_PORT=587
SMTP_USER=your-fastmail-email@fastmail.com
SMTP_PASS=your-fastmail-app-password

# =============================================================================
# REDIS CONFIGURATION (For Queue Management)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# BANK ACCOUNT CONFIGURATION
# =============================================================================
# Bank 1 credentials (for automated e-Transfer requests)
BANK1_USER=your-bank1-username
BANK1_PASS=your-bank1-password

# Bank 2 credentials (for automated e-Transfer requests)
BANK2_USER=your-bank2-username
BANK2_PASS=your-bank2-password

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
# Webhook URL for notifying WooCommerce of payment status changes
WEBHOOK_URL=https://your-woocommerce-site.com/wp-json/wc/v3/orders/{order_id}
WEBHOOK_SECRET=your-webhook-secret-key

# =============================================================================
# RISK MANAGEMENT CONFIGURATION
# =============================================================================
# Velocity limits and thresholds for risk assessment
VELOCITY_LIMIT_24H=5
MANUAL_REVIEW_THRESHOLD_CENTS=500000

# =============================================================================
# MERCHANT CONFIGURATION
# =============================================================================
# Merchant email for notifications and communications
MERCHANT_EMAIL=merchant@your-domain.com

# =============================================================================
# WORDPRESS/WOOCOMMERCE INTEGRATION
# =============================================================================
# These are set in WordPress admin, but documented here for reference:
# etransfer_recipient_email=payments@your-domain.com
# etransfer_backend_api_endpoint=https://your-api-domain.com/api/orders
# etransfer_enable_qr_codes=yes
# etransfer_custom_instructions=Your custom payment instructions here

# =============================================================================
# SHIPSTATION INTEGRATION (Optional - For Item #6)
# =============================================================================
# ShipStation API credentials for automatic tracking
SHIPSTATION_API_URL=https://ssapi.shipstation.com
SHIPSTATION_API_KEY=your-shipstation-api-key
SHIPSTATION_API_SECRET=your-shipstation-api-secret

# =============================================================================
# DEVELOPMENT/DEBUG SETTINGS
# =============================================================================
# Enable debug logging
DEBUG=true
LOG_LEVEL=info

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# JWT Secret for API authentication (if implemented)
JWT_SECRET=your-jwt-secret-key

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================
# Render.com specific settings
RENDER=true

# =============================================================================
# NOTES
# =============================================================================
# 1. IMAP settings are for receiving Interac notifications
# 2. SMTP settings are for sending payment instructions to customers
# 3. Bank credentials are for automated e-Transfer requests (if using requestbot)
# 4. Webhook settings connect to your WooCommerce site
# 5. All email addresses should use the same domain for consistency
# 6. Use app passwords for email services, not regular passwords
# 7. Test all email configurations before going live
# 8. Keep all credentials secure and never commit them to version control
